<odoo>
    <record id="patient_report_action" model="ir.actions.report">
        <field name="name">Patient Report</field>
        <field name="model">clinic.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_clinic_patient"/>
        <field name="binding_type">report</field>
        <field name="report_name">clinic_managment.patient_report_template</field>
    </record>

    <template id="patient_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout"/>
            <t t-foreach="docs" t-as="rec">
                <h2>Patient Report</h2>

        <t t-foreach="docs" t-as="rec">
            <div style="margin-bottom:15px; border-bottom:1px solid #ccc; padding:5px;">
                <p><strong>Task Name:</strong><span t-field="rec.name"/></p>
                <p><strong>Age:</strong><span t-field="rec.age"/></p>
                <p><strong>Phone:</strong><span t-field="rec.phone"/></p>
                <p><strong>Email:</strong><span t-field="rec.email"/></p>
                <p><strong>Gender:</strong><span t-field="rec.gender"/></p>
                <p><strong>Treatment Name:</strong><span t-field="rec.treatment_ids.treatment_name"/></p>
                <p><strong>Treatment Type:</strong><span t-field="rec.treatment_ids.treatment_type"/></p>
                <p><strong>Visits:</strong><span t-field="rec.visit_ids"/></p>

        </div>
        </t>
        </t>
        </t>


    </template>
</odoo>