<odoo>
    <record id="patient_treatment_form_view" model="ir.ui.view">
        <field name="name">Add Patient Treatment</field>
        <field name="model">patient.treatment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="treatment_name"/>
                    <field name="treatment_type"/>
                    <field name="notes"/>
                    <field name="price"/>
                    <field name="paid"/>
                </group>
                <footer>
                   <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
  <record id="patient_treatment_action_wizard" model="ir.actions.act_window">
      <field name="name">Patient Treatment</field>
      <field name="res_model">patient.treatment.wizard</field>
      <field name="target">new</field>
      <field name="view_mode">form</field>
  </record>
</odoo>